<mvc:View xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
controllerName="guy.ui.test.controller.App"
displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Panel headerText="{i18n>helloPanelTitle}">
						<content>
							<Button text="{i18n>showHelloButtonText}" press="onShowHello"/>
							<Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"/>
						</content>
					</Panel>
					<Carousel activePage="__image0" showBusyIndicator="false" id="__carousel0" loop="true" orientation="vertical" pageIndicatorPlacement="Vertical">
					    <pages>
					        <Image id="__image0" src="https://upload.wikimedia.org/wikipedia/commons/2/25/Bosque_de_Piedra%2C_provincia_de_Varna%2C_Bulgaria%2C_2016-05-27%2C_DD_73.jpg"/>
					        <Image id="__image1" src="https://upload.wikimedia.org/wikipedia/commons/1/1f/Cementera%2C_Yura%2C_Per%C3%BA%2C_2015-08-01%2C_DD_129-131_HDR.JPG"/>
					        <Image id="__image2" src="https://upload.wikimedia.org/wikipedia/commons/7/73/Wilparting_Church_01.jpg"/>
					        </pages>	
					</Carousel>
				</content>
				<content>
				<Button text="{i18n>showNewButtonText}" press="newAction"/>	
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>